<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="Suite">
    <listeners> 
        <listener class-name="Academy.listeners"/>
         <listener class-name="resources.ExtentReporterNG"/>
    </listeners>

  <test thread-count="5" name="Validating User Login">
    <classes>
      <class name="Academy.HomePage"/>
    </classes> 
  </test>
    
    <test thread-count="5" name="Validating title in the page">
        <classes>
             <class name="Academy.validateTitle"/>
        </classes> 
     </test>
    
    <test thread-count="5" name="App Testing">
         <classes>
              <class name="Academy.AppTest"/>
         </classes> 
     </test>
  
     <test thread-count="5" name="Validating navigation Bar">
         <classes>
               <class name="Academy.validateNavigationBar"/>
         </classes> 
     </test>
    
      
</suite> <!-- Suite -->
